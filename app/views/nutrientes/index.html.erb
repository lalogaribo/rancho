<% provide(:title, 'nutrientes') %>

<h1>Nutrientes</h1>

<div class="row">
  <div class="col-md-12 text-right form-group">
    <%= link_to 'Crear nutriente', new_nutriente_path, class: 'btn btn-primary btn-lg btn-large' %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th class="text-center">Nombre</th>
          <th class="text-center">Precio</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @nutrientes.each do |nutriente| %>
          <tr>
            <td align="center"><%= nutriente.nombre %></td>
            <td align="center"><%= nutriente.precio %></td>
            <td><%= link_to 'Show', nutriente %></td>
            <td><%= link_to 'Edit', edit_nutriente_path(nutriente) %></td>
            <td><%= link_to 'Destroy', nutriente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
