<%= render 'shared/page_title', title: 'Actualizar informacion del predio' %>

<div class="row form-group">
  <div class="col-md-12">
    <fieldset>
        <legend>Informacion Predio</legend>
        <div class="row">
            <div class="col-md-12">
                <%= form_tag("/predio_info", method: "post") do %>
                    <%= hidden_field_tag 'predio_id', @predio_id %>
                    <%= hidden_field_tag 'semana', @week %>
                    <%= hidden_field_tag 'user_id', 1 %>
                    <div class="row">
                        <div class="col-md-6"> 
                            <div class="row form-group">
                                <div class="col-md-4 text-right">
                                    <%= label_tag(:rafia, "Rafia") %>
                                </div>
                                <div class="col-md-3 text-left">
                                    <%= number_field_tag(:rafia , nil, in: 1...10, class: 'form-control' ) %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-4 text-right">
                                    <%= label_tag(:cinta, "Cinta") %>
                                </div>
                                <div class="col-md-3 text-left">
                                    <%= number_field_tag(:cinta , nil, in: 1...10, class: 'form-control' ) %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-4 text-right">
                                    <%= label_tag(:bolsa, "Bolsa") %>
                                </div>
                                <div class="col-md-3 text-left">
                                    <%= number_field_tag(:bolsa , nil, in: 1...10, class: 'form-control' ) %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-4 text-right">
                                    <%= label_tag(:fumigada, "Fumigada") %>
                                </div>
                                <div class="col-md-8 text-left">
                                    <%= text_field_tag 'fumigada' , nil, class: 'form-control'  %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-4 text-right">
                                    <%= label_tag(:pago_trabaja, "Pago Trabaja") %>
                                </div>
                                <div class="col-md-8 text-left">
                                    <%= text_field_tag 'pago_trabaja', nil , class: 'form-control'  %>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row form-group">
                                <div class="col-md-4 text-right">
                                    <%= label_tag(:otros_pagos, "Otros Pagos") %>
                                </div>
                                <div class="col-md-6 text-left">
                                    <%= text_field_tag 'otros_pagos', nil , class: 'form-control'  %>
                                </div>
                                <div class="col-md-2 text-right">
                                    <button type="button" class="btn btn-primary" id='add-otros-pagos'>
                                        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-4 text-right">
                                    <%= label_tag(:nutricion, "Nutricion") %>
                                </div>
                                <div class="col-md-8 text-left">
                                    <%= select_tag "nutricion", 
                                    options_from_collection_for_select(@nutrientes, "id", "nombre"),
                                    multiple: false, class: 'form-control', id: 'nutricion' %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-4 text-right">
                                    <%=label_tag(:conteo_racimos, "Conteo racimos") %>
                                </div>
                                <div class="col-md-8 text-left">
                                    <%= text_field_tag 'conteo_racimos', nil , class: 'form-control'  %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-4 text-right">
                                    <%= label_tag(:color_cinta, "Color cinta") %>
                                </div>
                                <div class="col-md-8 text-left">
                                    <%= select_tag "color_cinta", 
                                    "<option>Rojo</option><option>Verde</option><option>Amarillo</option><option>Azul</option><option>Naranja</option>".html_safe, 
                                    multiple: false, class: 'form-control', id: 'color_cinta' %>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-offset-4 col-md-8 text-right">
                                    <%= submit_tag "Completar", class: "btn btn-success" %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>    
    </fieldset>
 </div>
</div>

<div class="row">
  <div class="col-md-12">
    <fieldset>
        <legend>Historial</legend>
        <div class="row">
            <div class="col-md-12">
                <table id="table_id" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Semana</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Angel</td>
                            <td>9</td>
                        </tr>
                        <tr>
                            <td>Nahomi</td>
                            <td>7</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </fieldset>
 </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Gasto</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="control-label">Nombre:</label>
            <input type="text" class="form-control" id="nombre">
          </div>
           <div class="form-group">
            <label for="recipient-name" class="control-label">Precio:</label>
            <input type="text" class="form-control" id="precio">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Guardar Gasto</button>
      </div>
    </div>
  </div>
</div>