<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            <div class="col-md-12" style="margin-top:15px">
              <%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
                <div class="form-group">
                  <div class="col-md-10 col-md-offset-1">
                    <%= f.label :name, 'Nombre' %>
                    <%= f.text_field :name, class: 'form-control full-width', placeholder: 'Nombre', autofocus: true %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-10 col-md-offset-1">
                    <%= f.label :name, 'Nombre' %>
                    <%= f.text_field :name, class: 'form-control full-width', placeholder: 'Nombre', autofocus: true %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-10 col-md-offset-1">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: 'form-control full-width', placeholder: 'Ingresar correo electronico' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-10 col-md-offset-1">
                    <%= f.label :password, 'Contrase単a' %>
                    <%= f.password_field :password, class: 'form-control full-width', placeholder: 'Ingresar contrase単a' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-10 col-md-offset-1">
                    <%= f.label :password_confirmation, 'Confirmar contrase単a' %>
                    <%= f.password_field :password_confirmation, class: 'form-control full-width', placeholder: 'Confirmar contrase単a' %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="col-md-10 col-md-offset-1">
                    <div class="row">
                      <div class="col-md-6  text-left">
                        <%= link_to '<i class="fa fa-undo" aria-hidden="true"></i> Regresar al Inicio'.html_safe, user_path(current_user), class: 'btn btn-default btn-back' %>
                      </div>
                      <div class="col-md-6  text-right">
                        <%= f.submit(@user.new_record? ? 'Crear cuenta' : 'Actualizar cuenta',
                                     class: 'btn btn-primary btn-lg btn-xlarge btn-block btn-sbt-dashboard') %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            <% if @user.new_record? %>
              <div class="col-md-12 text-center back_link">
                <%= link_to 'Cancelar proceso de creacion de cuenta', root_path %>
              </div>
            <% end %>
          </div>

    </div>
  </div>
</div>