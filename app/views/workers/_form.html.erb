
<%= simple_form_for(@worker) do |f| %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nombre', placeholder: 'Ingresar Nombre' %>
    <%= f.input :last_name, label: 'Apellido', placeholder: 'Ingresar Apellido' %>
    <%= f.input :phone_number, label: 'Numero celular', placeholder: 'Ingresar numero celular' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, label:'Crear', class: 'btn btn-primary'%>
  </div>
<% end %>
