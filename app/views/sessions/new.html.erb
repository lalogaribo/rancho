
<div class="container">
  <div class="row ">
    <h2 class="text-center">Iniciar sesion</h2>
    <div class="col-md-5 col-md-offset-4">
      <div class="card">
        <div class="card-block">
          <%= form_for(:session, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>
              <div class="form-group">
                <div class="control-label col-md-2 ">
                  <%= f.label :email, 'Correo'  %>
                </div>
                <div class="col-md-7">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Ingresar Email' %>
                </div>
              </div>
              <div class="form-group">
                <div class="control-label col-md-2">
                  <%= f.label :password, 'Contraseña' %>
                </div>
                <div class="col-md-7">
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Ingresar contraseña' %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-7 col-md-offset-2">
                  <%= f.submit 'Iniciar sesion', class: 'btn btn-primary btn-block' %>
                </div>
              </div>
          <% end %>
          <div class="col-md-6 col-md-offset-2">
            [ <%= link_to 'Cancelar', root_path %>]
          </div>
        </div>
      </div>
    </div>
  </div>
</div>