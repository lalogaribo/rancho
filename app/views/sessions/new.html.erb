<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
      <div class="card">
        <div class="container-card">
          <div class="row">
            <div class="col-md-12" style="margin-top:15px">
              <h3 class="lato text-center">Iniciar sesion</h3>
              <hr>
              <%= form_for(:session, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>
                <div class="form-group">
                  <div class="col-md-12">
                    <%= f.email_field :email, class: 'form-control full-width', placeholder: 'Ingresar correo electronico' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-12">
                    <%= f.password_field :password, class: 'form-control full-width', placeholder: 'Ingresar contraseña' %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-8 col-md-offset-2">
                    <%#= f.submit 'Iniciar sesion',data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."}, class: 'btn btn-primary btn-block login-btn' %>
                    <%= f.button 'Iniciar sesion', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Iniciando sesion..."}, class: 'btn btn-primary btn-block login-btn' %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="col-md-12 text-center back_link ">
              <%= link_to "(Olvidaste tu contraseña? da click aqui)", new_password_reset_path %>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
