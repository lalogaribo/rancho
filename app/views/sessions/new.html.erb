
<div class="container">
  <div class="row">
    <h2 class="text-center">Iniciar sesion</h2>
    <div class="col-md-5 col-md-offset-4">
      <div class="card">
        <div class="container-card">
          <div class="row">
            <div class="col-md-12" style="margin-top:15px">
              <%= form_for(:session, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>
                  <div class="form-group">
                    <div class="control-label col-md-4 ">
                      <%= f.label :email, 'Correo'  %>
                    </div>
                    <div class="col-md-8">
                      <%= f.email_field :email, class: 'form-control', placeholder: 'Ingresar Email' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="control-label col-md-4">
                      <%= f.label :password, 'Contraseña' %>
                    </div>
                    <div class="col-md-8">
                      <%= f.password_field :password, class: 'form-control', placeholder: 'Ingresar contraseña' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-4 col-md-offset-8">
                      <%= f.submit 'Iniciar sesion', class: 'btn btn-primary btn-block' %>
                    </div>
                  </div>
              <% end %>
            </div>
            <div class="col-md-12 text-center" style="margin-bottom:15px">
              [ <%= link_to 'Cancelar', root_path %>]
            </div>
          </div>
        </di>
      </div>
    </div>
  </div>
</div>